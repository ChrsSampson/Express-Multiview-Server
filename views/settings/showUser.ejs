<% layout('./layout/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/show.css">
<%- include('../partials/settingNav.ejs') %>
 
<section class="container mt-2">
    <h3>User Details</h3>
    <button class="button" id="unlock-btn">Unlock</button>
    <hr />
    <form action="/settings/users/<%= user.id %>?_method=PATCH" method="POST">
        <article class="flex-row">
            <div class="ma-1">
                <label for="username">Username</label>
                <input class="disabled" type="text" name="user[username]" id="username" value=<%= user.username %> required disabled="true">
            </div>
            <div class="ma-1">
                <label for="email">Email</label>
                <input class="disabled" type="email" name="user[email]" id="email" value=<%= user.email %>  required disabled="true">
            </div>
        </article>
        <div>
            <label class="mb-1">Current Role: <%= user.role %></label>
            <label for="role" style="display: inline;">Change Role:</label>
            <select class="disabled" name="user[role]" disabled="true">
                <option value="">Choose Role</option>
                <option value="user">User</option>
                <option value="admin">Admin</option>
            </select>
        </div>
        <div>
            <label for="password">New Password</label>
            <input class="disabled" type="password" name="user[password]" id="password1" disabled="true">
        </div>
        <div>
            <label for="password">Re-Type Password</label>
            <input class="disabled" type="password" id="password2" disabled="true">
        </div>
        <div>
            <button type="submit" id="sub" class=" disabled button button-primary" disabled="true">Submit</button>
            <a href="/settings" class="button cancel-btn">Cancel</a>
        </div>
    </form> 

    
    <script src="/javascripts/showUser.js"></script>