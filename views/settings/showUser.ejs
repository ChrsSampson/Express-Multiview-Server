<% layout('./layout/boilerplateShow.ejs') %> 
<%- include('../partials/settingNav.ejs') %>
 
<section class="container mt-2">
    <h3>User Details</h3>
    <button class="button" id="unlock-btn">Unlock</button>
    <hr />
    <form action="" method="">
        <article class="flex-row">
            <div class="ma-1">
                <label for="username">Username</label>
                <input class="disabled" type="text" name="username" id="username" value=<%= user.username %> required disabled="true">
            </div>
            <div class="ma-1">
                <label for="email">Email</label>
                <input class="disabled" type="email" name="email" id="email" value=<%= user.email %>  required disabled="true">
            </div>
        </article>
        <div>
            <label class="mb-1">Current Role: <%= user.role %></label>
            <label for="role" style="display: inline;">Change Role:</label>
            <select class="disabled" name="role" disabled="true">
                <option value="">Choose Role</option>
                <option value="user">User</option>
                <option value="admin">Admin</option>
            </select>
        </div>
        <div>
            <label for="password">New Password</label>
            <input class="disabled" type="password" name="password" id="password1" disabled="true">
        </div>
        <div>
            <label for="password">Re-Type Password</label>
            <input class="disabled" type="password" id="password2" disabled="true">
        </div>
        <div>
            <button type="submit" class=" disabled button button-primary" disabled="true">Submit</button>
            <a href="/settings" class="button cancel-btn">Cancel</a>
        </div>
    </form> 
</section>