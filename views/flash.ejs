<link rel="stylesheet" href="/stylesheets/flash.css">

<% if(success && success.length){ %> 
    <div class="flash-container flash-success">
        <div class="flash">
            Success: <%= success %>
            <img class="dismiss-btn" src="icons/delete.svg" /> 
        </div>
    </div>
<% } %> 

<% if(info && info.length){ %> 
    <div class="flash-container flash-info">
        <div class="flash">
            Notice: <%= info %>
            <img class="dismiss-btn" src="icons/delete.svg" /> 
        </div>
    </div>
<% } %> 

<% if(error && error.length){ %> 
    <div class="flash-container flash-error ">
        <div class="flash">
            Error: <%= error %>
            <img class="dismiss-btn" src="icons/delete.svg" /> 
        </div>    
    </div>
<% } %> 

<script src="/javascripts/flash.js"></script>
