<link rel="stylesheet" href="/stylesheets/flash.css">

<% if(success && success.length){ %> 
    <div class="flash-container">
        <div class="flash">
            Success: <%= success %>
            <img id="dissmiss-btn" class="dismiss-btn" src="icons/delete.svg" alt="X" /> 
        </div>
        <div class="flash-color flash-success"></div>
    </div>
<% } %> 

<% if(info && info.length){ %> 
    <div class="flash-container flash-info">
        <div class="flash">
            Notice: <%= info %>
            <img id="dissmiss-btn" class="dismiss-btn" src="icons/delete.svg" alt="X"/>
        </div>
        <div class="flash-color flash-info"></div>
    </div>
<% } %> 

<% if(error && error.length){ %> 
    <div class="flash-container ">
        <div class="flash">
            Error: <%= error %>
            <img id="dissmiss-btn" class="dismiss-btn" src="icons/delete.svg" alt="X"/> 
        </div> 
        <div class="flash-color flash-error"></div>   
    </div>
<% } %> 

<script src="/javascripts/flash.js"></script>
